<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@color/ListOfStudent"
    android:padding="5dp">

    <TextView
        android:id="@+id/instructor_email"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginRight="100dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/time_stamp"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:text="time"
        android:textAlignment="center"
        android:textStyle="bold" />


    <RelativeLayout
        android:id="@+id/post_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/instructor_email">

        <TextView
            android:id="@+id/post_text_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/message_text_background"
            android:padding="20dp"
            android:text="message is here"
            android:textColor="@android:color/background_light"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/message_imageView"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop" />

    </RelativeLayout>

    <Button
        android:id="@+id/comment_btn"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/post_layout"
        android:layout_marginEnd="27dp"
        android:background="@android:color/background_light"
        android:text="Comment"
        android:textSize="10dp"
        android:textStyle="bold" />

</RelativeLayout>