<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:padding="5dp"
    tools:context=".startQuiz">


    <Button
        android:background="@drawable/button_quiz"
        android:id="@+id/nextquestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="Next question" />

    <RadioGroup
        android:id="@+id/choices"
        android:layout_width="66dp"
        android:layout_height="300dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="145dp"
       >

        <RadioButton
            android:id="@+id/r1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <RadioButton
            android:id="@+id/r2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <RadioButton
            android:id="@+id/r3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <RadioButton
            android:id="@+id/r4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </RadioGroup>

    <TextView
        android:background="@drawable/edit_text_border"
        android:id="@+id/choice1"
        android:layout_width="266dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="@id/choices"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="168.75dp"
        android:inputType="textPersonName"
        android:textSize="18dp"
        android:textStyle="bold"/>

    <TextView
        android:background="@drawable/edit_text_border"
        android:id="@+id/choice2"
        android:layout_width="266dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="243.75dp"
        android:inputType="textPersonName"
        android:textSize="18dp"
        android:textStyle="bold"/>

    <TextView
        android:background="@drawable/edit_text_border"
        android:id="@+id/choice3"
        android:layout_width="266dp"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="318.75dp"
        android:inputType="textPersonName"
        android:textSize="18dp"
        android:textStyle="bold"/>

    <TextView
        android:background="@drawable/edit_text_border"
        android:id="@+id/choice4"
        android:layout_width="266dp"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="393.75dp"
        android:inputType="textPersonName"
        android:textSize="18dp"
        android:textStyle="bold"/>

    <TextView
        android:background="@drawable/edit_text_border_quiz"
        android:id="@+id/question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_marginLeft="110dp"
        android:layout_alignTop="@+id/textView2"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="107dp"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="72dp"
        android:text="Question : "
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:textStyle="bold"
        android:id="@+id/tvv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Quiz ID : "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/QuizID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/tvv"
        android:ems="10"
        android:inputType="textPersonName"
        android:background="@drawable/edit_text_border_quiz"
     />

    <Button
        android:background="@drawable/button_quiz"
        android:id="@+id/nextresult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="Next Result" />

</RelativeLayout>