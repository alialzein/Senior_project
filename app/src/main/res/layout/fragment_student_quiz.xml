<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="com.example.alialzein.myclassroom.StudentQuizFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Enter Quiz ID:"
        android:textStyle="bold"
        android:textSize="20dp"
        />

    <EditText
        android:background="@drawable/edit_text_border"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:id="@+id/quizId"/>

    <Button
        android:layout_marginTop="5dp"
        android:background="@drawable/button_quiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/quizId"
        android:text="Start Quiz"
        android:id="@+id/startQuiz"/>

    <TextView
        android:id="@+id/textviewQuizGrade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/startQuiz"
        android:text="Quize Grade:"
        android:textSize="18dp"
        android:textStyle="bold"
       android:layout_marginTop="30dp" />

    <TextView
        android:textStyle="bold"
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textviewQuizGrade"
        android:layout_alignParentStart="true"
        android:id="@+id/textv1"
        android:text="enter the id of the quiz:"
        android:layout_margin="5dp"/>

    <EditText
        android:background="@drawable/edit_text_border_quiz"
        android:id="@+id/quiz_grade_id"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"

        android:layout_below="@+id/textviewQuizGrade"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="-8dp" />

    <Button

        android:background="@drawable/button_quiz"
        android:id="@+id/getQuizGrade"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_below="@+id/quiz_grade_id"
        android:layout_alignParentStart="true"
        android:text="get grade"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/quiz_grade_textView"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_below="@+id/getQuizGrade"
        android:textSize="18dp"
        android:textAlignment="center"
        android:layout_margin="5dp"/>

    <Button
        android:id="@+id/rate_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/quiz_grade_textView"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_quiz"
        android:text="rate ?" />


</RelativeLayout>
